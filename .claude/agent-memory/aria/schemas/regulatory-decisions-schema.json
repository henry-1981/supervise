{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "regulatory-decisions-schema.json",
  "title": "Regulatory Decisions Memory",
  "description": "Schema for storing regulatory decisions with metadata tagging",
  "type": "object",
  "required": ["version", "last_updated", "decisions", "metadata"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "decisions": {
      "type": "array",
      "description": "Regulatory decisions",
      "items": {
        "type": "object",
        "required": ["id", "company_id", "category", "decision", "rationale", "created_at", "is_valid"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique decision identifier"
          },
          "company_id": {
            "type": "string",
            "description": "Company-specific segregation"
          },
          "category": {
            "type": "string",
            "enum": ["mdr", "ivdr", "fda", "cmcas", "ukca", "other"],
            "description": "Regulatory category"
          },
          "regulation": {
            "type": "string",
            "description": "Regulation reference (e.g., MDR 2017/745)"
          },
          "article": {
            "type": "string",
            "description": "Article/section reference"
          },
          "decision": {
            "type": "string",
            "description": "Decision summary"
          },
          "rationale": {
            "type": "string",
            "description": "Decision rationale"
          },
          "evidence": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Supporting evidence citations"
          },
          "valid_until": {
            "type": "string",
            "format": "date-time",
            "description": "Decision validity expiration"
          },
          "is_valid": {
            "type": "boolean",
            "description": "Whether decision is currently valid"
          },
          "created_at": {
            "type": "string",
            "format": "date-time",
            "description": "Creation timestamp"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time",
            "description": "Last update timestamp"
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"},
            "description": "Search tags"
          },
          "usage_count": {
            "type": "integer",
            "minimum": 0,
            "description": "Number of times accessed"
          },
          "last_used_at": {
            "type": ["string", "null"],
            "format": "date-time",
            "description": "Last access timestamp"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "total_decisions": {"type": "integer"},
        "active_decisions": {"type": "integer"},
        "companies": {"type": "array", "items": {"type": "string"}},
        "categories": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
