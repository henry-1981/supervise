{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "task-patterns-schema.json",
  "title": "Task Patterns Memory",
  "description": "Schema for storing recognized task patterns",
  "type": "object",
  "required": ["version", "last_updated", "patterns", "metadata"],
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version"
    },
    "last_updated": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    },
    "patterns": {
      "type": "array",
      "description": "Recognized task patterns",
      "items": {
        "type": "object",
        "required": ["id", "name", "occurrence_count", "confidence", "steps", "created_at"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique pattern identifier"
          },
          "name": {
            "type": "string",
            "description": "Pattern display name"
          },
          "description": {
            "type": "string",
            "description": "Pattern description"
          },
          "occurrence_count": {
            "type": "integer",
            "minimum": 3,
            "description": "Number of times pattern detected (minimum 3)"
          },
          "confidence": {
            "type": "number",
            "minimum": 0,
            "maximum": 1,
            "description": "Pattern confidence score (0-1)"
          },
          "steps": {
            "type": "array",
            "description": "Pattern steps",
            "items": {
              "type": "object",
              "required": ["order", "action", "description"],
              "properties": {
                "order": {
                  "type": "integer",
                  "minimum": 1,
                  "description": "Step order"
                },
                "action": {
                  "type": "string",
                  "description": "Action identifier"
                },
                "description": {
                  "type": "string",
                  "description": "Step description"
                },
                "agent": {
                  "type": "string",
                  "description": "Responsible agent"
                }
              }
            }
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "last_suggested_at": {
            "type": ["string", "null"],
            "format": "date-time"
          },
          "suggestion_count": {
            "type": "integer",
            "minimum": 0
          },
          "tags": {
            "type": "array",
            "items": {"type": "string"}
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "total_patterns": {"type": "integer"},
        "high_confidence_patterns": {"type": "integer"},
        "pattern_tags": {"type": "array", "items": {"type": "string"}}
      }
    }
  }
}
